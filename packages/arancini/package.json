{
  "name": "arancini",
  "description": "An object based Entity Component System",
  "keywords": [
    "gamedev",
    "ecs",
    "entity-component-system"
  ],
  "type": "module",
  "packageManager": "yarn@3.2.1",
  "author": "Isaac Mason <isaac@isaacmason.com>",
  "license": "MIT",
  "version": "2.1.0",
  "homepage": "https://github.com/isaac-mason/arancini",
  "bugs": {
    "url": "https://github.com/isaac-mason/arancini/issues"
  },
  "scripts": {
    "test": " NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "build": "preconstruct build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@arancini/core": "2.1.0",
    "@arancini/react": "2.0.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@preconstruct/cli": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-storybook": "^0.5.1",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.5.4",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^2.1.0"
  },
  "files": [
    "dist/**",
    "react/**",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/arancini.cjs.js",
  "module": "dist/arancini.esm.js",
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "react.ts"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }
}
