{
  "name": "arancini",
  "description": "An entity manager for JavaScript.",
  "keywords": [
    "gamedev",
    "entity-manager",
    "entity"
  ],
  "author": "Isaac Mason <isaac@isaacmason.com>",
  "license": "MIT",
  "version": "8.0.0",
  "homepage": "https://github.com/isaac-mason/arancini",
  "bugs": {
    "url": "https://github.com/isaac-mason/arancini/issues"
  },
  "scripts": {
    "build": "yarn build:before && rollup --config rollup.config.js --bundleConfigAsCjs",
    "build:before": "rm -rf dist"
  },
  "dependencies": {
    "@arancini/core": "8.0.0",
    "@arancini/react": "8.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.1.6",
    "prettier": "^3.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.22.4",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-filesize": "^10.0.0",
    "typescript": "^5.8.2"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
