{
  "name": "arancini",
  "description": "An object based Entity Component System",
  "keywords": [
    "gamedev",
    "ecs",
    "entity-component-system"
  ],
  "packageManager": "yarn@3.2.1",
  "author": "Isaac Mason <isaac@isaacmason.com>",
  "license": "MIT",
  "version": "4.1.0",
  "homepage": "https://github.com/isaac-mason/arancini",
  "bugs": {
    "url": "https://github.com/isaac-mason/arancini/issues"
  },
  "scripts": {
    "build": "yarn build:before && rollup --config rollup.config.js --bundleConfigAsCjs",
    "build:before": "(rm index.js index.d.ts react.js react.d.ts || true)",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@arancini/core": "4.1.0",
    "@arancini/react": "4.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "prettier": "^3.0.1",
    "rollup": "^4.4.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-filesize": "^10.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^3.6.3"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./react": {
      "import": "./react.js"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "react.js",
    "react.d.ts",
    "LICENSE",
    "README.md"
  ]
}
